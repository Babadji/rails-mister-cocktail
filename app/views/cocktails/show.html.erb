<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h3>Doses</h3>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %></li>
    <li><%= dose.description %></li>
    <% end %>
  </ul>

      <h3>Create Doses</h3>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>

  <%= link_to "Update Cocktail", edit_cocktail_path(@cocktail) %>
  <%= link_to "Delete Cocktail", cocktails_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete your cocktail?"} %>
  <hr>
  <%= link_to "Go back to cocktails list", cocktails_path %>
</div>
